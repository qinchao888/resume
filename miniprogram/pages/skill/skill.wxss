.skill {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: #f4f4f4;
  overflow: scroll;
}
.skill>.banner image {
  width: 100%;
  height: 400rpx;
}
swiper {
  height: 400rpx;
  width: 100%;
}
.skill>.content {
  margin: 60rpx 30rpx 30rpx 30rpx;
  padding: 0 30rpx 30rpx 30rpx;
  display: flex;
  /*justify-content: space-between;*/
  flex-wrap: wrap;
  border-radius: 8rpx;
}
.skill>.content>.details {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 130rpx;
  height: 130rpx;
  align-items: center;
  background-color: #fff;
  border-radius: 50%;
}
.skill>.content>.details:not(:nth-child(4n+4)) {
  margin-right: calc((100% - 520rpx) /3);
}
.skill>.content>.details>.img_wrap image {
  margin-top: 16rpx;
  width: 60rpx;
  height: 60rpx;
}
.skill>.content>.details .text {
  font-size: 28rpx;
  color: #999;
}